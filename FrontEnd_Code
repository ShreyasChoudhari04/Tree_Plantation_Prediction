<!-- JS -->
<script>
function toggleTheme(){
    document.body.classList.toggle("dark");
}

function filterTable(){
    let input=document.getElementById("search").value.toLowerCase();
    document.querySelectorAll("#zoneTable tbody tr").forEach(row=>{
        row.style.display=row.innerText.toLowerCase().includes(input)?"":"none";
    });
}

/* CHART */
let ctx=document.getElementById("realtimeChart");
let chart=new Chart(ctx,{
    type:"line",
    data:{
        labels:["Now","+6h","+12h","+18h","+24h"],
        datasets:[
            {
                label:"Actual AQI",
                data:[72,74,73,71,70],
                borderWidth:3,
                tension:.4
            },
            {
                label:"Predicted AQI (ML)",
                data:[68,66,64,63,62],
                borderDash:[6,6],
                borderWidth:3,
                tension:.4
            }
        ]
    },
    options:{responsive:true}
});

/* LIVE SIMULATION */
setInterval(()=>{
    let val=Math.floor(65+Math.random()*10);
    document.getElementById("liveAQI").innerText=val;
    document.getElementById("aqiTrend").innerText=
        val<70?"Improving â†“":"Worsening â†‘";
    chart.data.datasets[0].data.shift();
    chart.data.datasets[0].data.push(val);
    chart.update();
},4000);
</script>

</body>
