}

/* GLOBAL */
body {
    background:#f4f6f8;
    transition:.3s;
}

body.dark {
    background:#0f172a;
    color:#e5e7eb;
}

body.dark .card,
body.dark .stat-card {
    background:rgba(30,41,59,.9);
    color:#e5e7eb;
}

.fade {
    animation:fade .8s ease forwards;
}
@keyframes fade {
    from {opacity:0; transform:translateY(25px);}
    to {opacity:1; transform:none;}
}

/* STAT CARDS */
.stat-card {
    background:var(--glass);
    backdrop-filter:blur(12px);
    padding:25px;
    border-radius:16px;
    box-shadow:0 12px 30px rgba(0,0,0,.1);
    transition:.3s;
}
.stat-card:hover {transform:translateY(-6px);}

/* MAP */
.map-container {
    height:450px;
    border-radius:16px;
    overflow:hidden;
}

/* TABLE */
.table-hover tbody tr {
    transition:.2s;
}
.table-hover tbody tr:hover {
    background:rgba(25,135,84,.08);
    transform:scale(1.01);
}

/* BADGES */
.badge-Poor {background:#dc3545;}
.badge-Moderate {background:#ffc107;color:#000;}
.badge-Good {background:#198754;}

/* AQI LEGEND */
.legend span {
    padding:6px 14px;
    border-radius:20px;
    font-size:.85rem;
    color:white;
    margin-right:8px;
}

/* TOGGLE */
.theme-toggle {cursor:pointer;font-size:1.4rem;}

@media(max-width:768px){
    h1{font-size:1.4rem;}
    .map-container{height:300px;}
}
</style>
</head>

