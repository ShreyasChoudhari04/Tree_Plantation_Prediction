    <td>{{ row.Zone }}</td>
    <td>{{ row.Temp }}</td>
    <td><span class="badge badge-{{ row.AQI }}">{{ row.AQI }}</span></td>
    <td>{{ row.UHI }}</td>
    <td class="fw-bold text-success">{{ row.TreesNeeded }}</td>
    <td>{{ row.TreesPerSqKm }}</td>
</tr>
{% endfor %}
</tbody>
</table>
